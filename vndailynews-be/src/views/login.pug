extends ./layouts/auth.pug
block content
        div(class='container-fluid login')
            div(class='row')
                div(class='col px-0')
                    header(class='header d-flex justify-content-center py-3 border-bottom mb-3') 
                        a(href=frontEndURL) 
                            img(src="/static/imgs/Logo_VNDailyNews.png", alt="Logo", class='header-brand')
                    h2(class='form-login-title text-center') ĐĂNG NHẬP
                    form(class='form-login',method='POST',action='/login')
                        div(class='form-group mb-2')
                            label(for='account') Tài khoản: 
                            input(class='form-control',name='account',placeholder='Nhập vào tài khoản',id='account',autoComplete=false,value=account)
                            if errors 
                                    each error in errors 
                                        if error.path == 'account'
                                            p(class="text-danger message ml-2 mt-2")=error.msg
                                            - break 
                        div(class='form-group mb-2')
                            label(for='#username') Mật khẩu: 
                            input(class='form-control',name='password',placeholder='Nhập vào mật khẩu',id='password',type='password',autoComplete=false,value=password)
                            if errors 
                                    each error in errors 
                                        if error.path == 'password'
                                            p(class="text-danger message ml-2 mt-2")=error.msg
                                            - break 
                            if message 
                                 p(class='text-danger message mt-2 ml-2')=message
                        div(class="d-flex justify-content-between")
                            a(href="/register" class="link-redirect") Đăng ký 
                            a(href="/forgot-password" class="link-redirect") Quên mật khẩu ? 
                        div(class='form-group mt-4 d-flex justify-content-center')
                            button(class='btn btn-primary btn-large form-btn text-white') Đăng nhập
