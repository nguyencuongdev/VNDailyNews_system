extends ./layouts/auth.pug

block content
    div(class='container-fluid change-password')
        div(class='row')
            div(class='col px-0')
                header(class='header d-flex justify-content-center py-3 border-bottom mb-3') 
                    a(href="http://localhost:3000/") 
                        img(src="/static/imgs/Logo_VNDailyNews.png", alt="Logo", class='header-brand')
                if msg
                    - var statusMsg = status ? 'success' : 'error';
                    +alert(msg,statusMsg)
                h2(class='form-login-title text-center') Thay đổi mật khẩu
                form(class='form-login',method='POST',action='/change-password?_method=put')
                    div(class='form-group mb-2')
                        label(for='account') Tài khoản: 
                        input(class='form-control',name='account',placeholder='Nhập vào tài khoản',id='account',autoComplete=false,value=account, readOnly=true)
                    div(class='form-group mb-2')
                        label(for='email') Email: 
                        input(class='form-control',name='email',placeholder='Nhập vào email',id='email',autoComplete=false,value=email, readOnly=true)
                    div(class='form-group mb-2')
                        label(for='#password') Mật khẩu mới: 
                            span(class="text-danger") *
                        input(class='form-control',name='passwordNew',placeholder='Nhập vào mật khẩu',id='password',type='password',autoComplete=false,value=password)
                        if errors 
                                each error in errors 
                                    if error.path == 'passwordNew'
                                        p(class="text-danger message ml-2 mt-2")=error.msg
                                        - break 
                        if message 
                                p(class='text-danger message mt-2 ml-2')=message
                    div(class='form-group mb-2')
                        label(for='#confirmPassword') Xác nhận mật khẩu mới: 
                            span(class="text-danger") *
                        input(class='form-control',name='confirmPassword',placeholder='Nhập vào mật khẩu',id='confirmPassword',type='password',autoComplete=false,value=password)
                        if errors 
                            each error in errors 
                                if error.path == 'confirmPassword'
                                    p(class="text-danger message ml-2 mt-2")=error.msg
                                    - break 
                        if message 
                            p(class='text-danger message mt-2 ml-2')=message
                    div(class="d-flex justify-content-end")
                        a(href="/forgot-password" class="link-redirect") Quay lại đăng nhập? 
                    div(class='form-group mt-4 d-flex justify-content-center')
                        button(class='btn btn-primary btn-large form-btn text-white') Cập nhật